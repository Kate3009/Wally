@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Wally - Iniciar Sesión</title>
    <style>
        body {
            background-color: #00cc66;
            font-family: Arial, sans-serif;
        }

        .login-container {
            width: 800px;
            margin: 100px auto;
            background-color: #aaf0d1;
            border-radius: 15px;
            padding: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-container {
            width: 45%;
        }

            .form-container h1 {
                font-size: 28px;
                color: #000;
                display: flex;
                align-items: center;
            }

                .form-container h1 span {
                    background-color: #778beb;
                    color: white;
                    font-weight: bold;
                    font-size: 24px;
                    padding: 5px 10px;
                    border-radius: 5px;
                    margin-right: 10px;
                }

        .form-group {
            margin-bottom: 15px;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 4px;
        }

        button {
            width: 100%;
            padding: 10px;
            background: linear-gradient(to right, silver, white);
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .links {
            margin-top: 10px;
            text-align: center;
        }

            .links a {
                color: #004080;
                text-decoration: none;
                display: block;
            }

        .image-container {
            width: 45%;
        }

            .image-container img {
                width: 100%;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="form-container">
            <h1><span>W</span>WALLY</h1>

            <div class="form-group">
                <label>Ingresa Usuario</label>
                <input type="text" name="usuario" />
            </div>

            <div class="form-group">
                <label>Ingresa Contraseña</label>
                <input type="password" name="contrasena" />
            </div>

            <div class="form-group">
                <button type="submit">Ingresar</button>
            </div>

            <div class="links">
                <a href="" style="font-size:small">Recuperar Contraseña</a>
                <a href="#" style="font-size:small">Crear cuenta</a>
            </div>
        </div>

        <div class="image-container">
            <img src="~/imagenes/Artboard-38.png" alt="" />
        </div>
    </div>
</body>
</html>

