
@{
    Layout = null;
    ViewBag.Title = "IndexAdmin";
}



<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Billetera Digital VISTA</title>
    <style>
        body {
            width: 100%;
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #e6f2ed;
        }

        .header {
            background-color: #00b377;
            color: white;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header .logo {
                background-color: #88a2c0;
                color: black;
                padding: 10px;
                border-radius: 10px;
                font-weight: bold;
                font-size: 20px;
            }

            .header a {
                color: white;
                text-decoration: none;
                font-weight: bold;
                margin-right: 20px;
            }

        .main {
            width: 98%;
            background-color: #96e0c0;
            padding: 30px;
            text-align: center;
        }

            .main h1 {
                font-size: 24px;
                margin-bottom: 10px;
            }

            .main h2 {
                font-size: 18px;
                margin-bottom: 30px;
            }

        .actions {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-wrap: wrap;
        }

        .action {
            background-color: #d9f5e6;
            border-radius: 15px;
            padding: 150px 20px;
            width: 250px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

            .action:hover {
                transform: scale(1.05);
            }

            .action img {
                width: 40px;
                margin-bottom: 10px;
            }

            .action p {
                margin: 0;
                font-weight: bold;
            }
    </style>
</head>
<body>

    <div class="header">
        <div class="logo">W</div>
        <a href="#">Cerrar sesión</a>
    </div>

    <div class="main">
        <h1>Bienvenido a tu billetera digital <strong>VISTA</strong></h1>
        <h2>¿Qué desea hacer?</h2>

        <div class="actions">
            <div class="action">
                <img src="https://img.icons8.com/ios-filled/50/000000/edit-user-male.png" alt="Actualizar datos" />
                <p>Actualizar datos</p>
            </div>
            <div class="action">
                <img src="https://img.icons8.com/ios-filled/50/000000/visible.png" alt="Ver cuenta" />
                <p>Ver Cuenta</p>
            </div>
            <div class="action">
                <img src="https://img.icons8.com/ios-filled/50/000000/money-transfer.png" alt="Hacer transferencia" />
                <p>Hacer Transferencia</p>
            </div>
        </div>
    </div>

</body>
</html>

